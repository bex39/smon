<!-- Sidebar -->
<div :class="sidebarOpen ? 'w-64' : 'w-20'"
    class="bg-gradient-to-b from-slate-950 to-slate-900 text-white transition-all duration-300 flex flex-col fixed h-full left-0 top-0 z-50 shadow-2xl border-r border-slate-700/70">
    <!-- Brand Header -->
    <div class="p-4 flex items-center justify-between border-b border-slate-700/70">
        <div :class="sidebarOpen ? 'flex' : 'hidden'" class="items-center space-x-3">
            <!-- Logo Icon -->
            <div class="relative">
                <div class="absolute inset-0 bg-gradient-to-br from-blue-500 to-cyan-400 rounded-lg blur-sm opacity-75">
                </div>
                <div class="relative bg-gradient-to-br from-blue-500 to-cyan-600 p-2 rounded-lg">
                    <i class="fas fa-chart-line text-white font-bold text-lg"></i>
                </div>
            </div>
            <!-- Text -->
            <div>
                <h1 class="text-xl font-bold leading-tight">SMon</h1>
                <p class="text-xs text-cyan-300">Network Monitor</p>
            </div>
        </div>
        <!-- Collapsed Logo -->
        <div :class="!sidebarOpen ? 'block' : 'hidden'" class="relative">
            <div class="absolute inset-0 bg-gradient-to-br from-blue-500 to-cyan-400 rounded-lg blur-sm opacity-75">
            </div>
            <div class="relative bg-gradient-to-br from-blue-500 to-cyan-600 p-2 rounded-lg">
                <i class="fas fa-chart-line text-white font-bold text-lg"></i>
            </div>
        </div>
        <!-- Toggle Button -->
        <button @click="sidebarOpen = !sidebarOpen" class="p-2 hover:bg-white/10 rounded-lg transition-colors">
            <i :class="sidebarOpen ? 'fas fa-chevron-left' : 'fas fa-chevron-right'" class="text-white text-sm"></i>
        </button>
    </div>

    <!-- Navigation -->
    <nav class="flex-1 p-4 space-y-2 overflow-y-auto">
        <a href="/"
            class="flex items-center space-x-3 px-4 py-3 rounded-lg <%= title === 'Dashboard' ? 'bg-white/20' : 'hover:bg-white/10' %> transition-colors">
            <i class="fas fa-chart-area w-5"></i>
            <span :class="sidebarOpen ? 'block' : 'hidden'">Dashboard</span>
        </a>

        <!-- Monitoring Section -->
        <div
            x-data="{ open: <%= ['Bandwidth Monitoring', 'Bandwidth Dashboard', 'Ping Monitor', 'Website Monitor', 'Domain Monitor'].includes(title) %> }">
            <button @click="open = !open"
                class="w-full flex items-center justify-between px-4 py-2 text-xs font-semibold text-cyan-300 uppercase tracking-wider hover:bg-white/5 transition-colors rounded-lg group"
                :class="sidebarOpen ? '' : 'justify-center'">
                <div class="flex items-center space-x-3">
                    <i class="fas fa-binoculars text-sm" :class="sidebarOpen ? '' : 'text-lg'"></i>
                    <span :class="sidebarOpen ? 'block' : 'hidden'">Monitoring</span>
                </div>
                <i class="fas fa-chevron-down text-[10px] transition-transform duration-200"
                    :class="[open ? 'rotate-180' : '', sidebarOpen ? 'block' : 'hidden']"></i>
            </button>
            <div x-show="open && sidebarOpen" x-collapse class="space-y-1 mt-1 pl-2 border-l border-slate-700/50 ml-6">
                <a href="/monitoring"
                    class="flex items-center space-x-3 px-4 py-2 rounded-lg <%= title === 'Bandwidth Monitoring' ? 'bg-white/20' : 'hover:bg-white/10' %> transition-colors">
                    <i class="fas fa-gauge-high w-4"></i>
                    <span :class="sidebarOpen ? 'block' : 'hidden'">Bandwidth</span>
                </a>

                <a href="/bandwidth"
                    class="flex items-center space-x-3 px-4 py-2 rounded-lg <%= title === 'Bandwidth Dashboard' ? 'bg-white/20' : 'hover:bg-white/10' %> transition-colors">
                    <i class="fas fa-chart-line w-4"></i>
                    <span :class="sidebarOpen ? 'block' : 'hidden'">Dashboard</span>
                </a>

                <a href="/ping"
                    class="flex items-center space-x-3 px-4 py-2 rounded-lg <%= title === 'Ping Monitor' ? 'bg-white/20' : 'hover:bg-white/10' %> transition-colors">
                    <i class="fas fa-network-wired w-4"></i>
                    <span :class="sidebarOpen ? 'block' : 'hidden'">Ping</span>
                </a>

                <a href="/websites"
                    class="flex items-center space-x-3 px-4 py-2 rounded-lg <%= title === 'Website Monitor' ? 'bg-white/20' : 'hover:bg-white/10' %> transition-colors">
                    <i class="fas fa-globe w-4"></i>
                    <span :class="sidebarOpen ? 'block' : 'hidden'">Websites</span>
                </a>

                <a href="/domains"
                    class="flex items-center space-x-3 px-4 py-2 rounded-lg <%= title === 'Domain Monitor' ? 'bg-white/20' : 'hover:bg-white/10' %> transition-colors">
                    <i class="fas fa-at w-4"></i>
                    <span :class="sidebarOpen ? 'block' : 'hidden'">Domains</span>
                </a>
            </div>
        </div>

        <!-- Infrastructure Section -->
        <div x-data="{ open: <%= ['Devices', 'Topology Map', 'Network Weathermap'].includes(title) %> }" class="pt-2">
            <button @click="open = !open"
                class="w-full flex items-center justify-between px-4 py-2 text-xs font-semibold text-green-300 uppercase tracking-wider hover:bg-white/5 transition-colors rounded-lg group"
                :class="sidebarOpen ? '' : 'justify-center'">
                <div class="flex items-center space-x-3">
                    <i class="fas fa-server text-sm" :class="sidebarOpen ? '' : 'text-lg'"></i>
                    <span :class="sidebarOpen ? 'block' : 'hidden'">Infrastructure</span>
                </div>
                <i class="fas fa-chevron-down text-[10px] transition-transform duration-200"
                    :class="[open ? 'rotate-180' : '', sidebarOpen ? 'block' : 'hidden']"></i>
            </button>
            <div x-show="open && sidebarOpen" x-collapse class="space-y-1 mt-1 pl-2 border-l border-slate-700/50 ml-6">
                <a href="/devices"
                    class="flex items-center space-x-3 px-4 py-2 rounded-lg <%= title === 'Devices' ? 'bg-white/20' : 'hover:bg-white/10' %> transition-colors">
                    <i class="fas fa-server w-4"></i>
                    <span :class="sidebarOpen ? 'block' : 'hidden'">Devices</span>
                </a>

                <a href="/map"
                    class="flex items-center space-x-3 px-4 py-2 rounded-lg <%= title === 'Topology Map' ? 'bg-white/20' : 'hover:bg-white/10' %> transition-colors">
                    <i class="fas fa-sitemap w-4"></i>
                    <span :class="sidebarOpen ? 'block' : 'hidden'">Topology</span>
                </a>

                <a href="/weathermap"
                    class="flex items-center space-x-3 px-4 py-2 rounded-lg <%= title === 'Network Weathermap' ? 'bg-white/20' : 'hover:bg-white/10' %> transition-colors">
                    <i class="fas fa-globe w-4"></i>
                    <span :class="sidebarOpen ? 'block' : 'hidden'">Weathermap</span>
                </a>
            </div>
        </div>

        <!-- Analytics Section -->
        <div x-data="{ open: <%= ['History', 'System Status - SMon'].includes(title) %> }" class="pt-2">
            <button @click="open = !open"
                class="w-full flex items-center justify-between px-4 py-2 text-xs font-semibold text-orange-300 uppercase tracking-wider hover:bg-white/5 transition-colors rounded-lg group"
                :class="sidebarOpen ? '' : 'justify-center'">
                <div class="flex items-center space-x-3">
                    <i class="fas fa-chart-bar text-sm" :class="sidebarOpen ? '' : 'text-lg'"></i>
                    <span :class="sidebarOpen ? 'block' : 'hidden'">Analytics</span>
                </div>
                <i class="fas fa-chevron-down text-[10px] transition-transform duration-200"
                    :class="[open ? 'rotate-180' : '', sidebarOpen ? 'block' : 'hidden']"></i>
            </button>
            <div x-show="open && sidebarOpen" x-collapse class="space-y-1 mt-1 pl-2 border-l border-slate-700/50 ml-6">
                <a href="/history"
                    class="flex items-center space-x-3 px-4 py-2 rounded-lg <%= title === 'History' ? 'bg-white/20' : 'hover:bg-white/10' %> transition-colors">
                    <i class="fas fa-history w-4"></i>
                    <span :class="sidebarOpen ? 'block' : 'hidden'">History</span>
                </a>

                <a href="/status"
                    class="flex items-center space-x-3 px-4 py-2 rounded-lg <%= title === 'System Status - SMon' ? 'bg-white/20' : 'hover:bg-white/10' %> transition-colors">
                    <i class="fas fa-tachometer-alt w-4"></i>
                    <span :class="sidebarOpen ? 'block' : 'hidden'">Status</span>
                </a>
            </div>
        </div>

        <div class="border-t border-slate-700/70 pt-4 mt-4">
            <a href="/settings"
                class="flex items-center space-x-3 px-4 py-3 rounded-lg <%= title === 'Settings' ? 'bg-white/20' : 'hover:bg-white/10' %> transition-colors">
                <i class="fas fa-cog w-5"></i>
                <span :class="sidebarOpen ? 'block' : 'hidden'">Settings</span>
            </a>

            <a href="/about"
                class="flex items-center space-x-3 px-4 py-3 rounded-lg <%= title === 'About' ? 'bg-white/20' : 'hover:bg-white/10' %> transition-colors">
                <i class="fas fa-info-circle w-5"></i>
                <span :class="sidebarOpen ? 'block' : 'hidden'">About</span>
            </a>

            <a href="/logout"
                class="flex items-center space-x-3 px-4 py-3 rounded-lg hover:bg-red-500/10 hover:text-red-400 transition-colors group">
                <i class="fas fa-sign-out-alt w-5 group-hover:text-red-400"></i>
                <span :class="sidebarOpen ? 'block' : 'hidden'">Logout</span>
            </a>
        </div>
    </nav>

    <!-- Sidebar Footer -->
    <div class="p-4 border-t border-slate-700/70">
        <div :class="sidebarOpen ? 'block' : 'hidden'" class="text-xs text-gray-400 text-center">
            <p class="font-medium text-cyan-300">SMon v<%= version %>
            </p>
            <p class="text-gray-500">Network Intelligence</p>
        </div>
        <div :class="!sidebarOpen ? 'flex justify-center' : 'hidden'">
            <i class="fas fa-chart-line text-cyan-300 text-lg"></i>
        </div>
    </div>
</div>